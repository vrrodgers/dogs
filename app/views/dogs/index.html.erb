<h1><center> Dog Store  Products </h1>

<%= link_to "Add new products", "/dogs/new" %>

<% @dogs.each do | dog| %>
 








<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <% @dogs.each do |dog|%>
      <% if dog.images.any? %> 
        <img src="<%= dog.images.first.image_url %>" alt="...">
      <% end %>
    
      <div class="caption">
      <h3><%= dog.name %></h3>
        
        <h3><%= dog.price %></h3>
        <p><h4><%= dog.description %></h4></p>
        <p><a href="/dogs/<%= dog.id %>" class="btn btn-primary" role="button">More Info</a> <a href="#" class="btn btn-default" role="button">Add To Cart</a> </p>
      </div>
    <%end%>
    </div>
  </div>
<%end%>




